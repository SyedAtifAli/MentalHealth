<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:src="@drawable/anxiety_img" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="160dp"
            android:background="@drawable/round_edge_activity">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Foundation Course for Anxiety"
                    android:layout_margin="15dp"
                    android:layout_centerHorizontal="true"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/robotoreg"
                    android:id="@+id/anx_title"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/anx_title"
                    android:layout_margin="15dp"
                    android:id="@+id/anx_days_rv"
                    android:visibility="visible"/>


            </RelativeLayout>

        </FrameLayout>

    </RelativeLayout>
</RelativeLayout>