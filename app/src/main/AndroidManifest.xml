<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mentalhealth">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mentalhealth">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".diary.AddActivity" />
        <activity android:name=".diary.DiaryActivity" />
        <activity
            android:name=".well_bieng_guide.Well_Being_Activity"
            android:theme="@style/Theme.MaterialComponents.NoActionBar" />
        <activity
            android:name=".chatbot.ChatActivity"
            android:theme="@style/Theme.MaterialComponents.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".Recommended_Activities.play_activity"
            android:theme="@style/Theme.MaterialComponents.NoActionBar" />
        <activity
            android:name=".Recommended_Activities.play_activity2"
            android:theme="@style/Theme.MaterialComponents.NoActionBar" />

        <activity
            android:name=".well_bieng_guide.Resilience.Activity.RES_START"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar" />
    </application>

</manifest>